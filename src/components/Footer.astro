---
import { IconBrandGithub } from "@tabler/icons-react";
import Container from "./Container.astro";
---

<footer class="border-t border-black/5 py-8">
  <Container class="flex justify-between">
    <span class="text-xs text-gray-400">
      &copy; Lars Salling {new Date().getFullYear()}
    </span>
    <div class="flex items-center gap-x-1.5 text-gray-500">
      <a
        href="https://github.com/lsalling/larssalling.me"
        class="flex items-center gap-x-1.5 text-gray-500 hover:text-gray-950"
        target="_blank"
        rel="noopener noreferrer nofollow"
      >
        <IconBrandGithub size="16" />
        <span class="text-xs">lsalling/larssalling.me</span>
      </a>
    </div>
  </Container>
</footer>
